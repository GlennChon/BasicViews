<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gcq1w_000.gcbasicviews.MainActivity"
    android:background="#000000"
    android:id="@+id/relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World, MainActivity!"
        android:textColor="#d6dbd6"
        android:id="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Save"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#d6dbd6"
        android:layout_marginTop="1dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:text="Open"
        android:id="@+id/button2"
        android:background="#d6dbd6"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:textColor="#000000" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:background="#d6dbd6"
        android:src="@drawable/apk" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/editText"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginTop="7dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autosave"
        android:id="@+id/saveChk"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:allowUndo="true"
        android:buttonTint="#d6dbd6" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/saveChk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numStars="1"
        android:isIndicator="true"
        android:layout_marginTop="7dp"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="0dp"
        android:clickable="true"
        android:progressBackgroundTint="#d6dbd6" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 2"
        android:id="@+id/radio2"
        android:checked="false"
        android:textColor="#ffffff"
        android:clickable="true"
        android:buttonTint="#29cb00"
        android:layout_above="@+id/toggleButton"
        android:layout_toRightOf="@+id/radio1"
        android:layout_toEndOf="@+id/radio1" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:clickable="true"
        android:singleLine="false"
        android:onClick="onCheckedChanged"
        android:checked="false"
        android:background="#d6dbd6"
        android:layout_below="@+id/radio1"
        android:layout_alignLeft="@+id/radio1"
        android:layout_alignStart="@+id/radio1"
        android:layout_marginTop="10dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 1"
        android:id="@+id/radio1"
        android:checked="false"
        android:textColor="#ffffff"
        android:clickable="true"
        android:buttonTint="#29cb00"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-10dp" />

</RelativeLayout>
